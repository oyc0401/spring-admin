sudo dnf -y update

# 도커 설치
sudo dnf -y install docker
sudo systemctl enable --now docker
sudo usermod -aG docker ec2-user

## 서버 ssh 나갔다가 오기
exit
# <- 다시 접속

sudo install -d -m 0755 /usr/local/lib/docker/cli-plugins

sudo curl -fL https://github.com/docker/compose/releases/download/v2.27.0/docker-compose-linux-aarch64 \
  -o /usr/local/lib/docker/cli-plugins/docker-compose

sudo chmod +x /usr/local/lib/docker/cli-plugins/docker-compose

# 동작 확인
docker --version
docker compose version



sudo dnf install -y git

# 프로젝트 실행
git clone https://github.com/oyc0401/spring-loki.git

cd spring-loki

docker compose up -d --build


docker compose ps


## 젠킨스 초기에 비번찾기!
docker exec -it jenkins cat /var/jenkins_home/secrets/initialAdminPassword